<!-- comment -->

<% if(currentUser && detail.author.id.equals(currentUser._id)) { %>
<div class="container">
  <div>
    <a class = "btn btn-waring" href="/book/<%= detail._id %>/edit">Edit</a>
  </div>
  <form action="/book/<%= detail._id %>?_method=DELETE" method="POST">
    <button class="btn btn-outline-danger">Delete</button>
  </form>
</div>
<% } %>
  <div class="container">
    <% detail.comments.forEach(function(comment){ %>
    <p><strong><%= comment.userment.username %></strong> - <%= comment.text %></p>
    <a class = "btn btn-waring" href="/book/<%= detail._id %>/comments/<%= comment._id %>/edit">Edit</a><a href=""></a>
<% }) %>
  </div>


